<MudPaper Class="pa-4 ma-2" Elevation="1">
    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2">@Command</MudText>

    <MudGrid GutterSize="0" AlignItems="Center" Justify="Justify.Center">
        <MudItem xs="6" class="d-flex justify-center">
            <StickAnimation Id="@($"{Id}_left")"  Segment="@LeftSegment" />
        </MudItem>
        <MudItem xs="6" class="d-flex justify-center">
            <StickAnimation Id="@($"{Id}_right")" Segment="@RightSegment" />
        </MudItem>
    </MudGrid>
</MudPaper>
@code {
    [Parameter] public string Id { get; set; } = "";
    [Parameter] public string Command { get; set; } = "OSD Command";
    [Parameter] public string LeftSegment { get; set; } = "up_center";
    [Parameter] public string RightSegment { get; set; } = "down_center";
}