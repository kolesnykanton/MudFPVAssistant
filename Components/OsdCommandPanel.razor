<MudPaper Class="pa-4 ma-2" Elevation="1" Style="width:250px">
    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2">@Command</MudText>

    <div class="d-flex justify-space-around">
        <StickAnimation Id="@($"{Id}_left")"
                        Segment="@LeftSegment" />
        <StickAnimation Id="@($"{Id}_right")"
                        Segment="@RightSegment" />
    </div>
</MudPaper>
@code {
    [Parameter] public string Id { get; set; } = "";
    [Parameter] public string Command { get; set; } = "OSD Command";
    [Parameter] public string LeftSegment { get; set; } = "up_center";
    [Parameter] public string RightSegment { get; set; } = "down_center";
}